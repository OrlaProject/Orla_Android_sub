<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderMaterialModifyActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_ac_material_modify_add"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:textStyle="bold"
        android:background="@color/white"
        android:id="@+id/toolbar">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원재료 이력 변경"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="#212529"
                android:id="@+id/toolbar_title"/>


            <ImageView
                android:id="@+id/btn_toolbar_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/back"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ac_material_modify_list"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>



    <Button
        android:id="@+id/btn_ac_material_modify_add"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="18dp"
        android:text="원재료 신규 등록"
        android:fontFamily="@font/noto_sans_cjkkr_regular"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_blue_fill"/>


</RelativeLayout>