<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MaterialAddActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:textStyle="bold"
        android:background="@color/white"
        android:id="@+id/toolbar">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원재료 이력 변경"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="#212529"
                android:id="@+id/toolbar_title"/>


            <ImageView
                android:id="@+id/btn_toolbar_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/back"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#1e2527"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/noto_sans_cjkkr_medium"
        android:text="사과"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="18dp"
        android:background="@color/white"
        android:elevation="4dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="품목"/>

            <View
                android:id="@+id/view_section_vertical1"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical1"
                android:text="사과"/>


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="인증분류"/>

            <View
                android:id="@+id/view_section_vertical2"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical2"
                android:text="무농약 농산물"/>



        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="인증번호"/>

            <View
                android:id="@+id/view_section_vertical3"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical3"
                android:text="031300001"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="생산자"/>

            <View
                android:id="@+id/view_section_vertical4"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical4"
                android:text="장귀동"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="농장 소재지"/>

            <View
                android:id="@+id/view_section_vertical5"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical5"
                android:text="강원 철원군 사바리"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:text="인증기관"/>

            <View
                android:id="@+id/view_section_vertical6"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_marginLeft="71dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_ac_material_add_bulid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#1e2527"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/view_section_vertical6"
                android:text="주식회사 유기식품 평가원"/>


        </RelativeLayout>






    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#1e2527"
        android:fontFamily="@font/noto_sans_cjkkr_medium"
        android:layout_marginTop="16dp"
        android:text="*변경 원재료 등록"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_cjkkr_regular"
        android:textColor="@color/lightish_blue"
        android:text="인증 번호"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_material_add_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#9b9b9b"
                android:background="@null"
                android:hint="인증 번호를 입력해주세요" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#979797"/>

        </LinearLayout>




        <Button
            android:id="@+id/btn_ckeck_num"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:text="확인"/>


    </LinearLayout>


    </LinearLayout>

    </LinearLayout>



</LinearLayout>