<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:dividerPadding="1dp">



    <RelativeLayout
        android:id="@+id/rl_tab_order_category_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="주문"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:textColor="#484848"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tab_order_category_made"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="제조"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:textColor="#484848"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tab_order_category_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="제조완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:textColor="#484848"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tab_order_category_delivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="수령완료"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#484848"/>
    </RelativeLayout>


</LinearLayout>